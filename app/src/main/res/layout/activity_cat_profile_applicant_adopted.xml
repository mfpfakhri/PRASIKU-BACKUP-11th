<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="clouwiko.dev.prasiku.activity.activity.CatProfileApplicantAdoptedActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/catprofile_appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="256sp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/cpa_adopted_photovalue"
                android:layout_width="match_parent"
                android:layout_height="256sp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:layout_collapseMode="parallax" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/cpa_adopted_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cpa_adopted_catnamevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="12dp"
                        android:text="@string/catprofile_name"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_catname"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@id/cpa_adopted_catnamevalue"
                        android:background="@color/dark_gray" />

                    <LinearLayout
                        android:id="@+id/cpa_adopted_contactroot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/view_catcontact"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cpa_adopted_whatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="32sp"
                            android:layout_margin="8dp"
                            android:src="@drawable/message_text" />

                        <ImageView
                            android:id="@+id/cpa_adopted_message"
                            android:layout_width="wrap_content"
                            android:layout_height="32sp"
                            android:layout_margin="8dp"
                            android:src="@drawable/whatsapp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view_catcontact"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/cpa_adopted_button"
                        android:background="@color/dark_gray" />

                    <Button
                        android:id="@+id/cpa_adopted_button"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corner_button"
                        android:text="@string/adopted"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="14dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/cpa_adopted_ownerlabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_ownerlabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_ownervalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/cpa_adopted_citylabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_citylabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_cityvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/cpa_adopted_genderlabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_genderlabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_gendervalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/cpa_adopted_doblabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_doblabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_dobvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/cpa_adopted_desclabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_descriptionlabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_descvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/cpa_adopted_medlabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_medicallabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_medvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/cpa_adopted_vaccinelabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_vaccinelabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_vaccinevalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/cpa_adopted_spayneuterlabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_spayneuterlabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_spayneutervalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/cpa_adopted_reasonlabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_adoptreasonlabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_reasonvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />
                <TextView
                    android:id="@+id/cpa_adopted_adoptstatuslabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/catprofile_adoptstatuslabel"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cpa_adopted_adoptstatusvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="18dp"
                    android:paddingLeft="12dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/light_gray" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
